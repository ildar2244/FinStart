<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ru.axdar.finstart.utilits.CircleView
        android:id="@+id/tv_pf_part_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_pf_part_about"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_pf_part_color"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@android:color/black"
        tools:text="Акции - доля 53%"/>
    <TextView
        android:id="@+id/tv_pf_part_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_pf_part_about"
        app:layout_constraintStart_toStartOf="@id/tv_pf_part_about"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@android:color/black"
        tools:text="2 197 444 P"/>
    <TextView
        android:id="@+id/tv_pf_part_change_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_pf_part_value"
        app:layout_constraintStart_toStartOf="@id/tv_pf_part_value"
        app:layout_constraintEnd_toStartOf="@id/tv_pf_part_change_count"
        android:textColor="@android:color/black"
        tools:text="+12%"/>
    <TextView
        android:id="@+id/tv_pf_part_change_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toTopOf="@id/tv_pf_part_change_percent"
        app:layout_constraintBottom_toBottomOf="@id/tv_pf_part_change_percent"
        app:layout_constraintStart_toEndOf="@id/tv_pf_part_change_percent"
        android:textColor="@android:color/black"
        tools:text="/ 188 533 P"/>
</androidx.constraintlayout.widget.ConstraintLayout>