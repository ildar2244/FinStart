<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">

    <TextView
        android:id="@+id/tv_pf_part_color"
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_pf_part_about"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_pf_part_about"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_pf_part_color"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Акции - доля 53%" />

    <TextView
        android:id="@+id/tv_pf_part_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_pf_part_about"
        app:layout_constraintTop_toBottomOf="@id/tv_pf_part_about"
        tools:text="2 197 444 P" />

    <TextView
        android:id="@+id/tv_pf_part_change_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toStartOf="@id/tv_pf_part_change_count"
        app:layout_constraintStart_toStartOf="@id/tv_pf_part_value"
        app:layout_constraintTop_toBottomOf="@id/tv_pf_part_value"
        tools:text="+12%" />

    <TextView
        android:id="@+id/tv_pf_part_change_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@id/tv_pf_part_change_percent"
        app:layout_constraintStart_toEndOf="@id/tv_pf_part_change_percent"
        app:layout_constraintTop_toTopOf="@id/tv_pf_part_change_percent"
        tools:text="/ 188 533 P" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="4dp"
        android:background="@color/colorGrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_pf_part_change_count" />
</androidx.constraintlayout.widget.ConstraintLayout>